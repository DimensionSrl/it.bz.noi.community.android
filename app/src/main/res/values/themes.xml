<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NOICommunity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="switchStyle">@style/Widget.App.Switch</item>

    </style>

    <style name="ToolbarTextAppearence">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="ToolbarTheme" parent="@style/Widget.MaterialComponents.ActionBar.Primary">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/white</item>
    </style>



    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <!--
        Switch checked: nero
        Switch unchecked: grigio medio
    -->
    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorSecondary">@color/black</item>
        <item name="colorSurface">@color/medium_gray</item>
        <item name="colorOnSurface">@color/medium_gray</item>
    </style>

    <!--
        Switch checked: grigio medio
        Switch unchecked: grigio chiaro
    -->
    <style name="ThemeOverlay.App.Switch2" parent="">
        <item name="colorSecondary">@color/medium_gray</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/medium_gray</item>
    </style>
</resources>